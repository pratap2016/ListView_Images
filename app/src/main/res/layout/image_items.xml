<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/d10dp">

    <android.support.v7.widget.AppCompatTextView

        android:id="@+id/text_view_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test"
        android:textColor="@android:color/black"
        android:textSize="@dimen/s16sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d5dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/iv_animal"
            android:layout_toStartOf="@+id/iv_animal"
            android:paddingEnd="@dimen/d5dp"
            android:paddingRight="@dimen/d5dp"
            android:textSize="@dimen/s14sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/iv_animal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:maxWidth="@dimen/d100dp"
            android:minHeight="@dimen/d100dp"
            android:minWidth="@dimen/d100dp" />
    </RelativeLayout>


</android.support.v7.widget.LinearLayoutCompat>